<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textAllCaps">false</item>


    </style>

    <style name="AppTheme.AppBarLight" parent="ThemeOverlay.AppCompat.Light">
        <!--<item name="colorPrimary">@color/gray_ffeff0f0</item>-->
        <!--<item name="colorPrimaryDark">@color/gray_ffeff0f0</item>-->
    </style>

    <style name="AppTheme.Popup" parent="ThemeOverlay.AppCompat.Light"/>

    <!--parent设置为启动页的theme-->
    <style name="AppTheme.customeTheme" parent="AppTheme">
<!--        <item name="android:windowBackground">@mipmap/logo</item>-->
        <!--
                <item name="android:windowFullscreen">?android:windowNoTitle</item>

                <item name="windowActionBar">false</item>
                <item name="windowNoTitle">true</item>
                <item name="android:textAllCaps">false</item>
                -->
    </style>

    <style name="FragmentDialogAnimation" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_push_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_push_out</item>
    </style>

    <style name="BottomSheetEdit" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item> <!--不浮现在活动上-->
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.NoActionBar.SwipeBack">
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="divider_1">
        <item name="android:layout_height">1.5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/white_f4f4f4</item>
    </style>

    <style name="divider_2">
        <item name="android:layout_height">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/white_f4f4f4</item>
    </style>


    <style name="roundTextView">
        <item name="android:text">xxxx</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/size36</item>
        <item name="android:padding">@dimen/px20</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

</resources>
