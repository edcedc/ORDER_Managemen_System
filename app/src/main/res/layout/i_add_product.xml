<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:background="@drawable/linerlayout_water_selector"
        android:clickable="true"
        android:padding="@dimen/px20">

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_product"
            android:textSize="@dimen/px30"
            android:textColor="@color/black"
            android:text="@string/product_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_product_num"
            android:layout_marginLeft="@dimen/px20"
            app:layout_constraintTop_toTopOf="@id/tv_product"
            app:layout_constraintBottom_toBottomOf="@id/tv_product"
            app:layout_constraintLeft_toRightOf="@id/tv_product"
            android:textSize="@dimen/px25"
            android:textColor="@color/blue"
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_tv_prize_name1"
            android:textSize="@dimen/px28"
            app:layout_constraintTop_toTopOf="@id/tv_prize_name"
            app:layout_constraintBottom_toBottomOf="@id/tv_prize_name"
            app:layout_constraintLeft_toLeftOf="@id/tv_product"
            android:textColor="@color/black"
            android:text="@string/prize_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_prize_name"
            app:layout_constraintLeft_toLeftOf="@id/tv_product_num"
            app:layout_constraintTop_toBottomOf="@id/tv_product_num"
            android:textSize="@dimen/px25"
            android:textColor="@color/bar_grey"
            android:layout_marginTop="@dimen/px28"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    <androidx.appcompat.widget.AppCompatTextView
            android:textSize="@dimen/px28"
            app:layout_constraintTop_toTopOf="@id/tv_supplier"
            app:layout_constraintBottom_toBottomOf="@id/tv_supplier"
            app:layout_constraintLeft_toLeftOf="@id/tv_product"
            android:textColor="@color/black"
            android:text="@string/supplier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_supplier"
            app:layout_constraintLeft_toLeftOf="@id/tv_product_num"
            app:layout_constraintTop_toBottomOf="@id/tv_prize_name"
            android:textSize="@dimen/px25"
            android:textColor="@color/bar_grey"
            android:layout_marginTop="@dimen/px28"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    <androidx.appcompat.widget.AppCompatTextView
            android:textSize="@dimen/px28"
            app:layout_constraintTop_toTopOf="@id/tv_unit_measurement"
            app:layout_constraintBottom_toBottomOf="@id/tv_unit_measurement"
            app:layout_constraintLeft_toLeftOf="@id/tv_product"
            android:textColor="@color/black"
            android:text="@string/unit_measurement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_unit_measurement"
            app:layout_constraintLeft_toLeftOf="@id/tv_product_num"
            app:layout_constraintTop_toBottomOf="@id/tv_supplier"
            android:textSize="@dimen/px25"
            android:textColor="@color/bar_grey"
            android:layout_marginTop="@dimen/px28"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_purchase"
            android:textSize="@dimen/px28"
            app:layout_constraintTop_toTopOf="@id/tv_purchase_price"
            app:layout_constraintBottom_toBottomOf="@id/tv_purchase_price"
            app:layout_constraintLeft_toLeftOf="@id/tv_product"
            android:textColor="@color/black"
            android:text="@string/purchase_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_purchase_price"
            app:layout_constraintLeft_toLeftOf="@id/tv_product_num"
            app:layout_constraintTop_toBottomOf="@id/tv_unit_measurement"
            android:textSize="@dimen/px25"
            android:textColor="@color/bar_grey"
            android:layout_marginTop="@dimen/px28"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_selling_price1"
            android:textSize="@dimen/px28"
            android:layout_marginLeft="100dp"
            app:layout_constraintTop_toTopOf="@id/tv_purchase_price"
            app:layout_constraintBottom_toBottomOf="@id/tv_purchase_price"
            app:layout_constraintLeft_toRightOf="@id/tv_purchase"
            android:textColor="@color/black"
            android:text="@string/selling_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_selling_price"
            android:layout_marginLeft="@dimen/px20"
            app:layout_constraintLeft_toRightOf="@id/tv_selling_price1"
            app:layout_constraintTop_toTopOf="@id/tv_selling_price1"
            app:layout_constraintBottom_toBottomOf="@id/tv_selling_price1"
            android:textSize="@dimen/px25"
            android:textColor="@color/bar_grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_sellin_price"
            android:layout_marginLeft="@dimen/px20"
            app:layout_constraintLeft_toLeftOf="@id/tv_selling_price"
            android:textSize="@dimen/px25"
            android:textColor="@color/bar_grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    <androidx.appcompat.widget.AppCompatTextView
            android:textSize="@dimen/px28"
            app:layout_constraintTop_toTopOf="@id/tv_unit_measurement"
            app:layout_constraintBottom_toBottomOf="@id/tv_unit_measurement"
            app:layout_constraintLeft_toLeftOf="@id/tv_product"
            android:textColor="@color/black"
            android:text="@string/unit_measurement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    <androidx.appcompat.widget.AppCompatTextView
            android:textSize="@dimen/px28"
            app:layout_constraintTop_toTopOf="@id/tv_profit"
            app:layout_constraintBottom_toBottomOf="@id/tv_profit"
            app:layout_constraintLeft_toLeftOf="@id/tv_product"
            android:textColor="@color/black"
            android:text="@string/profit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_profit"
            app:layout_constraintLeft_toLeftOf="@id/tv_product_num"
            app:layout_constraintTop_toBottomOf="@id/tv_purchase_price"
            app:layout_constraintTop_toTopOf="@id/tv_purchase_quantity"
            app:layout_constraintBottom_toBottomOf="@id/tv_purchase_quantity"
            android:textSize="@dimen/px25"
            android:textColor="@color/bar_grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_tv_commodity_category1"
            android:textSize="@dimen/px28"
            app:layout_constraintLeft_toLeftOf="@id/tv_selling_price1"
            app:layout_constraintTop_toTopOf="@id/tv_tv_prize_name1"
            app:layout_constraintBottom_toBottomOf="@id/tv_tv_prize_name1"
            app:layout_constraintRight_toLeftOf="@id/tv_commodity_category"
            android:textColor="@color/black"
            android:text="@string/commodity_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_commodity_category"
            app:layout_constraintLeft_toLeftOf="@id/tv_selling_price"
            app:layout_constraintTop_toTopOf="@id/tv_tv_commodity_category1"
            app:layout_constraintBottom_toBottomOf="@id/tv_tv_commodity_category1"
            android:textSize="@dimen/px25"
            android:textColor="@color/bar_grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    <CheckBox
            app:layout_constraintTop_toTopOf="@id/tv_profit"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/cb_"
            android:gravity="center"
            android:padding="@dimen/px20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_purchase_quantity"
            app:layout_constraintLeft_toLeftOf="@id/tv_selling_price"
            app:layout_constraintTop_toBottomOf="@id/tv_selling_price"
            android:textSize="@dimen/px25"
            android:padding="@dimen/px20"
            android:text="0"
            android:minEms="4"
            android:gravity="center"
            android:background="@drawable/tv_border"
            android:drawablePadding="@dimen/px10"
            android:drawableRight="@mipmap/b13"
            android:textColor="@color/bar_grey"
            android:layout_marginTop="@dimen/px10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    <androidx.appcompat.widget.AppCompatTextView
            android:textSize="@dimen/px28"
            app:layout_constraintTop_toTopOf="@id/tv_purchase_quantity"
            app:layout_constraintBottom_toBottomOf="@id/tv_purchase_quantity"
            app:layout_constraintLeft_toLeftOf="@id/tv_selling_price1"
            android:textColor="@color/black"
            android:text="@string/purchase_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

</androidx.constraintlayout.widget.ConstraintLayout>