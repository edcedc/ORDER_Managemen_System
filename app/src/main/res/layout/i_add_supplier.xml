<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:id="@+id/layout"
        android:background="@drawable/linerlayout_water_selector"
        android:clickable="true"
        android:padding="@dimen/px20"
        tools:ignore="MissingConstraints"
        android:layout_height="wrap_content">

    <CheckBox
            android:id="@+id/cb_"
            app:layout_constraintRight_toLeftOf="@id/tv_supplier_num"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_supplier_num"
            app:layout_constraintTop_toTopOf="@id/cb_"
            app:layout_constraintBottom_toBottomOf="@id/cb_"
            app:layout_constraintLeft_toRightOf="@id/cb_"
            app:layout_constraintRight_toLeftOf="@id/tv_supply_category"
            android:textSize="@dimen/px26"
            android:textColor="@color/black"
            android:text="@string/supplier_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_supply_category"
            app:layout_constraintTop_toTopOf="@id/cb_"
            app:layout_constraintBottom_toBottomOf="@id/cb_"
            app:layout_constraintLeft_toRightOf="@id/tv_supplier_num"
            app:layout_constraintRight_toLeftOf="@id/tv_supplier_name"
            android:textSize="@dimen/px26"
            android:textColor="@color/black"
            android:text="@string/supply_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_supplier_name"
            app:layout_constraintTop_toTopOf="@id/cb_"
            app:layout_constraintBottom_toBottomOf="@id/cb_"
            app:layout_constraintLeft_toRightOf="@id/tv_supply_category"
            app:layout_constraintRight_toRightOf="parent"
            android:textSize="@dimen/px26"
            android:textColor="@color/black"
            android:text="@string/supplier_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

</androidx.constraintlayout.widget.ConstraintLayout>