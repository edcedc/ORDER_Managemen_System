<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:padding="@dimen/px20"
        android:layout_width="match_parent"
        android:background="@drawable/linerlayout_water_selector"
        android:clickable="true"
        tools:ignore="MissingConstraints"
        android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_order"
            android:textSize="@dimen/px34"
            android:textColor="@color/black"
            android:text="@string/order_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_order_num"
            android:layout_marginLeft="@dimen/px26"
            app:layout_constraintLeft_toRightOf="@id/tv_order"
            app:layout_constraintTop_toTopOf="@id/tv_order"
            app:layout_constraintBottom_toBottomOf="@id/tv_order"
            android:textSize="@dimen/px25"
            android:textColor="@color/blue"
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_creation_date"
            android:layout_marginTop="@dimen/px20"
            android:textSize="@dimen/px26"
            android:textColor="@color/black"
            android:text="@string/creation_date"
            android:layout_width="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_order"
            android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_data"
            app:layout_constraintTop_toTopOf="@id/tv_creation_date"
            app:layout_constraintLeft_toRightOf="@id/tv_creation_date"
            android:textSize="@dimen/px25"
            android:layout_marginLeft="@dimen/px90"
            android:textColor="@color/bar_grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_founder1"
            app:layout_constraintTop_toTopOf="@id/tv_creation_date"
            app:layout_constraintLeft_toRightOf="@id/tv_creation_date"
            android:textSize="@dimen/px26"
            android:layout_marginLeft="150dp"
            android:textColor="@color/black"
            android:text="@string/founder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_founder"
            app:layout_constraintTop_toTopOf="@id/tv_creation_date"
            app:layout_constraintLeft_toRightOf="@id/tv_founder1"
            android:textSize="@dimen/px25"
            android:layout_marginLeft="@dimen/px50"
            android:textColor="@color/bar_grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_user1"
            android:layout_marginTop="@dimen/px20"
            android:textSize="@dimen/px26"
            android:textColor="@color/black"
            android:text="@string/user"
            android:layout_width="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_creation_date"
            android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_user"
            app:layout_constraintTop_toTopOf="@id/tv_user1"
            app:layout_constraintLeft_toRightOf="@id/tv_user1"
            app:layout_constraintLeft_toLeftOf="@id/tv_data"
            android:textSize="@dimen/px25"
            android:textColor="@color/bar_grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_supplier1"
            android:layout_marginTop="@dimen/px20"
            app:layout_constraintTop_toBottomOf="@id/tv_user1"
            android:textSize="@dimen/px26"
            android:textColor="@color/black"
            android:text="@string/supplier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_supplier"
            app:layout_constraintTop_toTopOf="@id/tv_supplier1"
            app:layout_constraintLeft_toLeftOf="@id/tv_data"
            android:textSize="@dimen/px25"
            android:textColor="@color/bar_grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_purchase1"
            android:layout_marginTop="@dimen/px20"
            android:textSize="@dimen/px26"
            android:textColor="@color/black"
            android:text="@string/purchase"
            android:layout_width="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_supplier1"
            android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_purchase"
            app:layout_constraintTop_toTopOf="@id/tv_purchase1"
            app:layout_constraintLeft_toRightOf="@id/tv_user1"
            app:layout_constraintLeft_toLeftOf="@id/tv_data"
            android:textSize="@dimen/px25"
            android:textColor="@color/bar_grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatTextView
            app:layout_constraintTop_toTopOf="@id/tv_purchase1"
            app:layout_constraintLeft_toLeftOf="@id/tv_founder1"
            android:textSize="@dimen/px26"
            android:textColor="@color/black"
            android:text="@string/sales_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_sales_amount"
            app:layout_constraintTop_toTopOf="@id/tv_purchase1"
            app:layout_constraintLeft_toLeftOf="@id/tv_founder"
            android:layout_width="wrap_content"
            android:textSize="@dimen/px25"
            android:textColor="@color/bar_grey"
            android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_data_update_date"
            android:layout_marginTop="@dimen/px20"
            android:textSize="@dimen/px26"
            android:textColor="@color/black"
            android:text="@string/data_update_date"
            android:layout_width="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_purchase1"
            android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_data_update"
            app:layout_constraintTop_toTopOf="@id/tv_data_update_date"
            app:layout_constraintLeft_toRightOf="@id/tv_user1"
            app:layout_constraintLeft_toLeftOf="@id/tv_data"
            android:textSize="@dimen/px25"
            android:textColor="@color/bar_grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_state"
            app:layout_constraintLeft_toLeftOf="@id/tv_founder1"
            android:textSize="@dimen/px26"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>